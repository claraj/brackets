<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchWinner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#3333FF</item>
    </style>


    <style name="MatchLoser" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#AAAAAA</item>
    </style>

</resources>
